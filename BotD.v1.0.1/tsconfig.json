{
    "compilerOptions": {
      "module": "ESNext",  // For dynamic imports, can also try "commonjs"
      "target": "ES2017",  // ES2015 ensures Promise support
      "lib": ["ES2017", "DOM"],  // Supports modern JavaScript and browser APIs
      "jsx": "react",
      "outDir": "./dist",  // Compiled files will go here
      "strict": true,
      "types": ["jest"], // Ensure Jest types are included
      "esModuleInterop": true,  // Interoperability between CommonJS and ES modules
      "skipLibCheck": true,  // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,  // Avoid issues with file name casing
      "moduleResolution": "node"  // Use Node module resolution strategy
    },
    "include": ["src/**/*"],  // Include source files
    "exclude": ["node_modules"]  // Exclude unnecessary files
  }
  